{
  "name": "02resturant",
  "version": "1.0.0",
  "description": "02resturant is a place you can get all nigeria/africa dish",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass sass/main.scss css/style.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass",

    
    "compile:css": "node-sass sass/main.scss css/style.comp.css",
    "concat:css": "concat -o css/style.concat.css css/style.comp.css css/icon-font.css",
    "prefix": "postcss --use autoprefixer -b 'last 10 version' -o css/style.prefix.css css/style.concat.css",
    "compress:css": "node-sass css/style.concat.css css/style.css --output-style compressed",
    "build:process": "npm-run-all compile:css concat:css prefix:css compress:css"
  },
  "author": "eko gift",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.8",
    "concat": "^1.0.3",
    "node-sass": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^10.0.0"
  }
}
